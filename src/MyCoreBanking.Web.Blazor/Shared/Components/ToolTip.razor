<style>
    .tooltip-wrapper {
        position: relative;
        display: inline-block;
        /*border-bottom: 1px dotted black;*/
        cursor: pointer;
    }

    #spanText {
        visibility: hidden;
        position: absolute;
        width: 120px;
        bottom: 100%;
        left: 50%;
        margin-left: -60px;
        background-color: #363636;
        color: #fff;
        text-align: center;
        padding: 5px 0;
        border-radius: 6px;
        z-index: 1;
        margin-bottom: 8px;
        line-height: normal;
    }

        #spanText::after {
            content: "";
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: #555 transparent transparent transparent;
        }

    .tooltip-wrapper:hover #spanText {
        visibility: visible;
    }
</style>

@if (DataEfetivacao != default)
{
    <div class="tooltip-wrapper">
        <span id="spanText">
            @((MarkupString)Text)
            <br>
            @(DataEfetivacao.ToShortDateString())
        </span>
        @ChildContent
    </div>
}
else
{
    <div class="tooltip-wrapper">
        <span id="spanText">@((MarkupString)Text)</span>
        @ChildContent
    </div>
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public DateTime DataEfetivacao { get; set; }
}
