@page "/cadastroCartao"

<div class="row justify-content-center">

    <div class="containerCartao">
        <img class="logoMasterCard" src="../assets/img/cards/mastercardlogo.png">
        <img class="chip" src="../assets/img/cards/chip.png">
        <p class="nomeCartao">Gabriel Grassi</p>
        <h4 class="numeroCartao">0000 0000 0000 0000</h4>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-9 col-lg-12 col-xl-6">
        <div class="card shadow-lg o-hidden border-0 my-5">
            <div class="card-body p-0">
                <div class="row">

                    <div class="col">
                        <div class="p-5">
                            <div class="text-center">
                                <h4 class="text-dark mb-4" style="font-size: 18px;">Cadastre um novo cartão</h4>
                            </div>
                            <form class="user">
                                <div class="row mb-3">
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="nome" placeholder="Nome no Cartão" name="nome"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="documento" placeholder="CPF" name="documento"></div>
                                </div>
                                <div class="mb-3"><input class="form-control form-control-user" type="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="CVC" name="cvc"></div>
                                <div class="mb-3">
                                    <div class="text-center">
                                        <h5 class="text-dark mb-4" style="font-size: 18px;">Tipo do Cartão</h5>
                                    </div>
                                     <input class="form-check-input margin-left: 0.25em;" type="checkbox" value="" id="flexCheckDefault">
                                          <label class="form-check-label" for="flexCheckDefault">
                                            Crédito
                                          </label>
                                     <input class="form-check-input margin-left: 0.25em;" type="checkbox" value="" id="flexCheckDefault">
                                          <label class="form-check-label" for="flexCheckDefault">
                                            Débito
                                          </label>
                                </div>
                                <div class="text-center">
                                        <h5 class="text-dark mb-4" style="font-size: 18px;">Mês e Ano de Vencimento</h5>
                                </div>
                                <div class="mb-3">
                                    <input class="form-control form-control-user" type="month" id="mesV" name="mesV">
                                </div>
                                <div class="text-center">
                                        <h5 class="text-dark mb-4" style="font-size: 18px;">Local De Cobrança</h5>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="bairro" placeholder="Bairro" name="bairro"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="rua" placeholder="Rua" name="rua"></div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-6 mb-3 mb-sm-0"><input class="form-control form-control-user" type="text" id="numeroCasa" placeholder="Número" name="numeroCasa"></div>
                                    <div class="col-sm-6"><input class="form-control form-control-user" type="text" id="complemento" placeholder="Complemento" name="complemento"></div>
                                </div>
                                <div class="mb-3" style="display: flex;justify-content: center; align-items: center;">
                                    <div class="dropdown">
                                          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                          Banco Cadastrado
                                          </button>
                                              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                                <li><a class="dropdown-item" href="#">Nubank</a></li>
                                                <li><a class="dropdown-item" href="#">Almeida Pay</a></li>
                                                <li><a class="dropdown-item" href="#">Santander</a></li>
                                              </ul>
                                        </div>
                                </div>

                                <button class="btn btn-primary d-block btn-user w-100" type="submit">Registrar Cartão</button>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


