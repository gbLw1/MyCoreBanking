@page "/contas/cadastrar"

 <!-- Área do formulario -->
<div class="row justify-content-center">
    <div class="col-md-9 col-lg-12 col-xl-6">
        <div class="card shadow-lg o-hidden border-0 my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col">
                        <div class="p-5">
                            <!-- Titulo do Formulario -->
                            <div class="text-center">
                                <h4 class="text-dark mb-4" style="font-size: 18px;">Cadastre uma nova conta bancária</h4>
                            </div>
                            <!-- Formulario -->
                            <form class="user">
                                <div class="row mb-3">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="text-dark mb-4" style="font-size: 18px;margin-left: 10px;">Agência</h6>
                                    <input class="form-control form-control-user" type="text" id="agencia" placeholder="Agência" name="agencia"></div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="text-dark mb-4" style="font-size: 18px;margin-left: 10px;">Conta</h6>
                                    <input class="form-control form-control-user" type="text" id="conta" placeholder="Conta" name="conta"></div>
                                </div>
                                <div class="mb-3">
                                    <div class="dropdown-center">
                                          <button class="btn text-primary fw-bolder btn-sm d-none d-sm-inline-block border border-primary btn-user w-100 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                            Banco
                                          </button>
                                              <ul class="dropdown-menu" style="width:100%" aria-labelledby="dropdownMenuButton1">
                                                <li><a class="dropdown-item" href="#">Nubank</a></li>
                                                <li><a class="dropdown-item" href="#">Almeida Pay</a></li>
                                              </ul>
                                        </div>
                                </div>
                                 <button class="btn btn-primary d-block btn-user w-100" type="submit">Registrar Conta Bancária</button>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


