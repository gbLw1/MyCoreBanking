@page "/cadastroTransacaoParcelada"

 <!-- Área do Formulário -->
<div class="row justify-content-left">
    <div class="col-md-9 col-lg-12 col-xl-6">
        <div class="card shadow-lg o-hidden border-0 my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col">
                        <div class="p-5">
                            <div class="text-center">
                                <h4 class="text-dark mb-4" style="font-size: 18px;">Cadastre uma transação recorrente</h4>
                            </div>
                            <!-- Formulário -->
                            <form class="user">
                                <div class="mb-3">
                                     <h6 class="text-dark mb-4" style="font-size: 18px;">Descrição</h6>
                                    <input class="form-control form-control-user" type="text" id="descricao" placeholder="Descrição" name="descricao">
                                </div>
                                <div class="mb-3">
                                     <h6 class="text-dark mb-4" style="font-size: 18px;">Observação</h6>
                                    <input class="form-control form-control-user" type="text" id="observacao" placeholder="Observação" name="observacao">
                                </div>
                                <div class="row mb-3">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="dropdown-center">
                                          <button class="btn text-primary fw-bolder btn-sm d-none d-sm-inline-block border border-primary btn-user w-100 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                            Método de Pagamento
                                          </button>
                                              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                                <li><a class="dropdown-menu" href="#"></a></li>
                                                <li><a class="dropdown-item" href="#">Cartão de crédito</a></li>
                                                <li><a class="dropdown-item" href="#">Conta Corrente</a></li>
                                              </ul>
                                        </div>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <div class="dropdown-center">
                                      <button class="btn text-primary fw-bolder btn-sm d-none d-sm-inline-block border border-primary btn-user w-100 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Tipo
                                      </button>
                                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" href="#">Receita</a></li>
                                        <li><a class="dropdown-item" href="#">Despesa</a></li>
                                      </ul>
                                    </div>
                                </div>
                                </div>
                                <div class="row mb-3">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="text-dark mb-4" style="font-size: 18px;">Data de Início</h6>
                                    <input class="form-control form-control-user" type="date" id="dataVigenciaInicio" name="dataVigenciaInicio">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <h6 class="text-dark mb-4" style="font-size: 18px;">Data Fim</h6>
                                    <input class="form-control form-control-user" type="date" id="dataVigenciaFim" name="dataVigenciaFim">
                                </div>
                                </div>
                                <h6 class="text-dark mb-4" style="font-size: 18px;">Dia de Vencimento</h6>
                                <div class="mb-3"><input class="form-control form-control-user" type="number" id="diaVencimento" name="diaVencimento"></div>

                                <h6 class="text-dark mb-4" style="font-size: 18px;">Número de Parcelas</h6>
                                <div class="mb-3"><input class="form-control form-control-user" type="number" id="numeroParcelas" placeholder="Número de Parcelas" name="numeroParcelas"></div>
                                
                                <h6 class="text-dark mb-4" style="font-size: 18px;">Valor da Parcela</h6>
                                <div class="mb-3"><input class="form-control form-control-user" type="number" id="valorParcelas" placeholder="Valor da Parcela" name="valorParcelas"></div>
                                <button class="btn btn-primary fw-bolder btn-sm d-none d-sm-inline-block border border-primary btn-user w-100" type="submit">Registrar Transação</button>
                                <hr>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
