@page "/transacoes"
@using System.Globalization;

<h3 class="text-dark mb-4">Transações</h3>
<div class="card shadow">
    <div class="card-header py-3">
        <p class="text-primary m-0 fw-bold">Extrato</p>
    </div>
    <div class="card-body">

        <div class="row">
            <!-- Qtde em exibição -->
            <div class="col-md-6 text-nowrap">
                <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                    <label class="form-label">
                        Show&nbsp;
                        <select class="d-inline-block form-select form-select-sm">
                            <option value="10" selected="">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>&nbsp;
                    </label>
                </div>
            </div>

            <!-- Filtro de pesquisa -->
            <div class="col-md-6">
                <div class="text-md-end dataTables_filter" id="dataTable_filter"><label class="form-label"><input type="search" class="form-control form-control-sm" aria-controls="dataTable" placeholder="Search"></label></div>
            </div>
        </div>

        <!-- Tabela -->
        <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
            <table class="table my-0" id="dataTable">
                <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Data</th>
                        <th>Valor</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="align-middle">
                            Mercado
                        </td>
                        <td class="align-middle">@($"{DateTime.Now:dd/MM/yyyy} às {DateTime.Now:HH}h{DateTime.Now:mm}m")</td>
                        <td class="align-middle">@(rnd.Next(5000).ToString("C", CultureInfo.GetCultureInfo("pt-BR")))</td>
                        <td class="align-middle text-center">
                            <button type="button" class="btn" @onclick="() => IrParaEdicaoTransacao(Guid.NewGuid())">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </td>
                        <td class="align-middle">
                            <button type="button" class="btn" @onclick="() => ExcluirTransacao(Guid.NewGuid())">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
